generator client {
  provider     = "prisma-client"
  output       = "./client"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
}

model Product {
  id             Int      @id @default(autoincrement())
  name           String
  sku            String   @unique
  price          Float
  stock_quantity Int
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model OrderData {
  id    Int      @id @default(autoincrement())
  date  DateTime @default(now())
  total Int
  data  Json
}
